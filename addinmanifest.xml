<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
            xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
            xsi:type="MailApp">

  <Id>c38391c5-695b-4563-a37f-bccdef67f5ce</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>New Harmony BH</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="Automated Follow-Up Add-In"/>
  <Description DefaultValue="Schedule follow-up reminders for sent emails."/>
  <IconUrl DefaultValue="https://yh920it.github.io/Office-Add-in/icon64.png"/>
  <HighResolutionIconUrl DefaultValue="https://yh920it.github.io/Office-Add-in/icon128.png"/>
  <SupportUrl DefaultValue="https://yh920it.github.io/Office-Add-in/support.html"/>

  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>

  <Requirements>
    <Sets DefaultMinVersion="1.5">
      <Set Name="Mailbox"/>
    </Sets>
  </Requirements>

  <Permissions>ReadItem</Permissions>

  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides/1.1"
                    xsi:type="VersionOverridesV1_1">

    <Requirements>
      <bt:Sets DefaultMinVersion="1.5">
        <bt:Set Name="Mailbox"/>
      </bt:Sets>
    </Requirements>

    <Hosts>
      <Host xsi:type="MailHost">
        <DesktopFormFactor>
          <ExtensionPoint xsi:type="MessageReadCommandSurface">
            <OfficeTab id="TabDefault">
              <Group id="msgReadGroup">
                <Label resid="groupLabel"/>
                <Control xsi:type="Button" id="openPaneButton">
                  <Label resid="paneButtonLabel"/>
                  <Supertip>
                    <Title resid="paneButtonTitle"/>
                    <Description resid="paneButtonDesc"/>
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="icon16"/>
                    <bt:Image size="32" resid="icon64"/>
                    <bt:Image size="80" resid="icon128"/>
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <SourceLocation resid="taskPaneUrl"/>
                    <SupportsPinning>true</SupportsPinning>
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>
        </DesktopFormFactor>
      </Host>
    </Hosts>

    <Resources>
      <bt:Urls>
        <bt:Url id="taskPaneUrl" DefaultValue="https://yh920it.github.io/Office-Add-in/popup.html"/>
      </bt:Urls>
      <bt:Images>
        <bt:Image id="icon16" DefaultValue="https://yh920it.github.io/Office-Add-in/icon16.png"/>
        <bt:Image id="icon64" DefaultValue="https://yh920it.github.io/Office-Add-in/icon64.png"/>
        <bt:Image id="icon128" DefaultValue="https://yh920it.github.io/Office-Add-in/icon128.png"/>
      </bt:Images>
      <bt:ShortStrings>
        <bt:String id="groupLabel" DefaultValue="Automated Secretary"/>
        <bt:String id="paneButtonLabel" DefaultValue="Schedule Reminder"/>
        <bt:String id="paneButtonTitle" DefaultValue="Schedule a follow-up reminder"/>
      </bt:ShortStrings>
      <bt:LongStrings>
        <bt:String id="paneButtonDesc" DefaultValue="Open the pane to schedule a follow-up reminder for this email."/>
      </bt:LongStrings>
    </Resources>

    <WebApplicationInfo>
      <Id>cd300113-3aa4-4e6e-800c-e9462ee9dc2e</Id>
      <Resource>api://cd300113-3aa4-4e6e-800c-e9462ee9dc2e</Resource>
      <Scopes>
        <Scope>Mail.Read</Scope>
        <Scope>Calendars.ReadWrite</Scope>
      </Scopes>
    </WebApplicationInfo>

  </VersionOverrides>
</OfficeApp>
