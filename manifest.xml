<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.5"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
           xsi:type="MailApp">

  <Id>c38391c5-695b-4563-a37f-bccdef67f5ce</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>New Harmony BH</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="Automated Follow-Up Add-In" />
  <Description DefaultValue="Schedule follow-up reminders for sent emails." />
  <IconUrl DefaultValue="https://yh920it.github.io/Office-Add-in/icon32.png" />
  <HighResolutionIconUrl DefaultValue="https://yh920it.github.io/Office-Add-in/icon80.png" />
  <SupportUrl DefaultValue="https://yh920it.github.io/Office-Add-in/support.html" />
  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>

  <Requirements>
    <Sets DefaultMinVersion="1.5">
      <Set Name="Mailbox"/>
    </Sets>
  </Requirements>

  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://yh920it.github.io/Office-Add-in/popup.html" />
        <RequestedHeight>400</RequestedHeight>
      </DesktopSettings>
    </Form>
  </FormSettings>

  <Permissions>ReadItem</Permissions>

  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Read"/>
  </Rule>

  <DisableEntityHighlighting>false</DisableEntityHighlighting>

  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides/1.1"
                    xsi:type="VersionOverridesV1_0">
    <Hosts>
      <Host Name="Mailbox">
        <DesktopFormFactor>
          <ExtensionPoint xsi:type="MessageReadCommandSurface">
            <OfficeTab id="TabDefault">
              <Group id="msgReadGroup">
                <Label resid="groupLabel" />
                <Control xsi:type="Button" id="openPaneButton">
                  <Label resid="paneButtonLabel" />
                  <Supertip>
                    <Title resid="paneButtonTitle" />
                    <Description resid="paneButtonDesc" />
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="icon16"/>
                    <bt:Image size="32" resid="icon32"/>
                    <bt:Image size="80" resid="icon80"/>
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <SourceLocation resid="taskPaneUrl" />
                    <SupportsPinning>true</SupportsPinning>
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>
        </DesktopFormFactor>
      </Host>
    </Hosts>

    <Resources>
      <bt:Urls>
        <bt:Url id="taskPaneUrl" DefaultValue="https://yh920it.github.io/Office-Add-in/popup.html"/>
      </bt:Urls>
      <bt:Images>
        <bt:Image id="icon16" DefaultValue="https://yh920it.github.io/Office-Add-in/icon16.png"/>
        <bt:Image id="icon32" DefaultValue="https://yh920it.github.io/Office-Add-in/icon32.png"/>
        <bt:Image id="icon80" DefaultValue="https://yh920it.github.io/Office-Add-in/icon80.png"/>
      </bt:Images>
      <bt:ShortStrings>
        <bt:String id="groupLabel" DefaultValue="Automated Secretary"/>
        <bt:String id="paneButtonLabel" DefaultValue="Schedule Reminder"/>
        <bt:String id="paneButtonTitle" DefaultValue="Schedule a follow-up reminder"/>
      </bt:ShortStrings>
      <bt:LongStrings>
        <bt:String id="paneButtonDesc" DefaultValue="Open the pane to schedule a follow-up reminder for this email."/>
      </bt:LongStrings>
    </Resources>

    <WebApplicationInfo>
      <Id>cd300113-3aa4-4e6e-800c-e9462ee9dc2e</Id>
      <Resource>api://cd300113-3aa4-4e6e-800c-e9462ee9dc2e</Resource>
      <Scopes>
        <Scope>Calendars.ReadWrite</Scope>
        <Scope>Mail.Read</Scope>
      </Scopes>
    </WebApplicationInfo>
  </VersionOverrides>
</OfficeApp>